<div id="login-credenciais" class="panel panel-primary">
  <div class="panel-heading">Login</div>
  <div class="panel-body">
    <%= form_tag(controller: "login", action: "login", method: "post") do %>
      <div class="form-group">
	<input type="text" name="email" placeholder="Email" class="form-control">
      </div>
      <div class="form-group">
	<input type="password" name="passwd" placeholder="Senha" class="form-control">
      </div>
      <div id="login-botoes" class="btn-group btn-group-lg" role="group">
	<input type="submit" class="btn btn-default" value="Entrar">
	<button type="button" class="btn btn-default">Cancelar</button>
      </div>
    <% end %>
</div>
