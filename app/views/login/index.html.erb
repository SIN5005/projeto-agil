<%= form_tag(controller: "login", action: "login", method: "post") do %>
    <%= stylesheet_link_tag "style.css" %>
    <ul>
        <li><%=link_to "Home", "#"%></li>
        <li><%=link_to "Login", "/login"%></li>
        <li><%=link_to "Cadastro", "/users/"%></li>
    </ul>
    <div id="pluto_login" class="pluto_login">
        <img src="<%= asset_path('clippluto22.gif') %>">
    </div>
    <div id="login-credenciais" class="login">
        <div class="form-group">
            E-mail<br>
            <input type="text" name="email" placeholder="Email" class="form-control">
        </div>

        <div class="form-group">
            Senha<br>
            <input type="password" name="password" placeholder="Senha" class="form-control">
        </div>

        <br>

        <div id="login-botoes" class="btn-group btn-group-lg" role="group">
            <input type="submit" class="btn btn-default" name="entrar" value="Entrar">
        </div>            

        <br><br><br>

        <div id="forgot-password">
            <span><a target="_self" href="/login/forgot">Esqueceu sua senha? Clique aqui</a></span>
        </div>
        <p id="notice"><%= notice %></p>
    </div>
<% end %>