<%= form_tag(controller: "users", action: "forgot", method: "post") do %>
    <%= stylesheet_link_tag "style.css" %>
    <ul>          
        <li><%=link_to "Home", "/"%></li>
        <li><%=link_to "Login", "/login"%></li>
        <li><%=link_to "Cadastro", "/users/"%></li>
    </ul>    
    <div id="users-credenciais" class="panel panel-primary">    
        <h1>Esqueci minha Senha</h1>        

        <div class="panel-body">        
            <div class="form-group">
                E-mail <br>
                <input type="text" name="email" placeholder="e-mail" class="form-control">
            </div>    

            <br><br>

            <div id="login-botoes" class="btn-group btn-group-lg" role="group">
                <input type="submit" class="btn btn-default" name="Enviar" value="Enviar">
            </div>
        </div>    
        <p id="notice"><%= notice %></p>
    </div>
<% end %>