<%= form_tag(controller: "users", action: "password", method: "post") do %>
  <div id="users-credenciais" class="panel panel-primary">
    <h1>Alterar Senha</h1>
    <div class="panel-heading"></div>
    <div class="panel-body">        
    <div class="form-group">
      Nova Senha 
      <input type="password" name="newpass" placeholder="Senha" class="form-control">
    </div>    
    <div class="form-group">
      Confirmação 
      <input type="password" name="confirmation" placeholder="Confirmação" class="form-control">
    </div>
    <div id="login-botoes" class="btn-group btn-group-lg" role="group">
      <input type="submit" class="btn btn-default" name="alterar" value="Alterar">
    </div>    
    </div>    
    <p id="notice"><%= notice %></p>
  </div>
<% end %>