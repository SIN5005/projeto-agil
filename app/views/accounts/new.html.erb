<html>
    <head>
        <title>Contas</title>
    </head>
    <body>
      <%= render "layouts/menu" %>
        <h1>Cadastro de Contas</h1>
        
        <%= form_for Account.new do |f| %>
            Nome <br> <input type="text" name="account[name]"/><br>
            Saldo <br> <input type="number" step="0.01" name="account[balance]" value="0.00"/>
            <%= f.hidden_field :user_id, :value => session[:user_id] %>
            <br><br>
            <button type="submit">Criar Conta</button>
            <p><%= flash_message %></p>
        <% end %>
    </body>
</html>
